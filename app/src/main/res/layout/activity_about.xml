<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.studio.sameer.myapplication.About"
    tools:layout_editor_absoluteY="0dp"
    android:background="@color/DarkYellow"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginEnd="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginStart="8dp"
     android:layout_marginTop="2dp"
     android:gravity="center"
     android:orientation="vertical"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     tools:layout_constraintLeft_creator="1"
     tools:layout_constraintRight_creator="1"
     tools:layout_constraintTop_creator="1">


     <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginEnd="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="4dp"
         app:layout_constraintHorizontal_bias="1.0"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         card_view:cardCornerRadius="4dp"
         tools:layout_constraintLeft_creator="1"
         tools:layout_constraintRight_creator="1"
         tools:layout_constraintTop_creator="1">


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:padding="12dp">

             <ImageView
                 android:id="@+id/applogo"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginRight="5dp"
                 android:src="@drawable/cclogo3" />

             <TextView
                 android:id="@+id/appTitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/applogo"
                 android:text="@string/app_name"
                 android:textSize="25sp" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/appTitle"
                 android:layout_toRightOf="@+id/applogo"
                 android:text="Open Source Project" />

         </RelativeLayout>

     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginEnd="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="4dp"
         app:layout_constraintHorizontal_bias="1.0"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         card_view:cardCornerRadius="4dp"
         tools:layout_constraintLeft_creator="1"
         tools:layout_constraintRight_creator="1"
         tools:layout_constraintTop_creator="1">

         <LinearLayout
             android:id="@+id/desc"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="This is a open source project, created as a hobby. Source code available in GitHub."
                 android:textColor="@color/lightYellow"
                 android:textSize="18sp" />

         </LinearLayout>


     </android.support.v7.widget.CardView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="15dp">

         <ImageView
             android:id="@+id/gitHubLogo"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_gravity="start"
             android:layout_weight="1"
             android:src="@drawable/gitlogo" />

         <ImageView
             android:id="@+id/shareLogo"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:src="@drawable/sharelogo" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="15dp">

         <ImageView
             android:id="@+id/mailLogo"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_weight="1"
             android:src="@drawable/maillogo" />

         <ImageView
             android:id="@+id/reviewLogo"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_weight="1"
             android:src="@drawable/reviewlogo" />
     </LinearLayout>

 </LinearLayout>


</android.support.constraint.ConstraintLayout>
