<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.studio.sameer.myapplication.lastFragment"

    >
    <TextView
        android:id="@+id/tempText1"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempText1"
        android:background="@color/DarkYellow"
        >
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/searchableSpinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:entries="@array/allcurrencies2"
            android:padding="20dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tempText2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/toplayout" />
    <RelativeLayout
        android:id="@+id/secondSearchableSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempText2"
        android:background="@color/DarkYellow"
        >

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/searchableSpinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:entries="@array/allcurrencies2"
            android:padding="20dp"
            />


    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/secondSearchableSpinner"
    android:gravity="center"
        android:orientation="vertical"
    android:padding="10dp">
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:ems="15"
        android:hint="Enter Value"
        android:inputType="number"
        android:padding="15dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:padding="15dp"
        android:textSize="25dp"
        android:textStyle="bold" />
    </RelativeLayout>





